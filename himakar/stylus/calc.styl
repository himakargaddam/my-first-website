$primary-color = #123456;

div {
	margin: 0;
	padding: 0;
	box-sizing: border-box;
	font: bold 14px Arial, sans-serif;
}

#calculator {
	width: 325px;
	height: auto;
	margin: 100px auto;
	padding: 20px 20px 9px 20px;
	background: #9dd2ea;
	border-radius: 3px;
}

.top {
	overflow: hidden;
	.screen {
		height: 40px;
		width: 300px;
		padding: 0px 10px;
		margin-bottom: 10px;
		background: rgba(0, 0, 0, 0.2);
		border-radius: 3px;
	}
	span.clear {
		float: right;
		position: relative;
		top: 0;
		cursor: pointer;
		width: 66px;
		height: 36px;
		background: white;
		border-radius: 3px;
		margin: 0 7px 11px 0;
		color: $primary-color;
		line-height: 36px;
		text-align: center;
		&:hover {
			background: #f68991;
		}
	}
}

.keys {
	overflow: hidden;
	span {
		float: left;
		position: relative;
		top: 0;
		cursor: pointer;
		width: 66px;
		height: 36px;
		background: white;
		border-radius: 3px;
		margin: 0 7px 11px 0;
		color: $primary-color;
		line-height: 36px;
		text-align: center;
		&.operator {
			background: #FFF0F5;
			margin-right: 0;
		}
		&.eval {
			background: #f1ff92;
			&:hover {
				background: #abb850;
			}
		}
		&.clear {
			background: #ff9fa8;
			color: white;

		}
		&:hover {
			background: #9c89f6;
			color: white;
		}
	}
}
